{
    "name": "@guilds/repo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "docs/"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "format": "prettier --write . --config package.json",
        "lint": "tsc -p ./packages/guilds.js --noEmit; prettier . --check --config package.json --ignore-path=.prettierignore"
    },
    "devDependencies": {
        "prettier": "^3.8.1",
        "turbo": "^2.8.10",
        "typescript": "^5.9.3"
    },
    "prettier": {
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "printWidth": 90,
        "quoteProps": "as-needed",
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "packageManager": "pnpm@10.30.2",
    "engines": {
        "node": ">=20"
    }
}
