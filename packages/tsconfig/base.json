{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "esModuleInterop": true,
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "verbatimModuleSyntax": true
    }
}
